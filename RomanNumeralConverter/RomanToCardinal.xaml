<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RomanNumeralConverter.RomanToCardinal"
             Title="Roman Numerals to Cardinal Number">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">
            
                <Label Text="Enter a Roman Numeral" FontSize="Medium"/>
                <Border Stroke="gray" StrokeThickness="1">
                    <Entry x:Name="TxtEntry" />
                </Border>
            
                <Label Text= "Cardinal Number:" FontSize="Medium" />
                <Border Stroke="gray" StrokeThickness="1">
                    <Label x:Name="lblCardinal" FontSize="Medium" Margin="0,15,0,10" Padding="10,10"/>
                </Border>
            
            
                <Button x:Name="btnConvertToCardinal" Text="Convert" FontSize="Medium" Margin="0,10" />
                <Button x:Name="btnClearNumbers" Text="Clear" FontSize="Medium" />
            
            </VerticalStackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>